{
    "extends": ["eslint:recommended", "plugin:react/recommended"],
    "plugins": ["react"],
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 8,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true,
            "modules": true
        }
    },
    "env": {
        "es6": true,
        "node": true,
        "browser": true
    },
    "settings": {
        "import/resolver": "webpack"
    },
    "rules": {
        "semi": [1, "always", { "omitLastInOneLineBlock": true }],
        "indent": [2, 4, { "SwitchCase": 1, "VariableDeclarator": 1, "outerIIFEBody": 1 }],
        "comma-dangle": [1, "never"],
        "arrow-parens": [1, "as-needed"],
        "max-len": [0, 120],
        "no-param-reassign": 1,
        "react/jsx-uses-vars": 2,
        "no-console": [1, { allow: ["warn", "error"] }],
        "id-length": [1, { "min": 3 }],
        "no-nested-ternary": 2,
        "no-trailing-spaces": 2,
        "no-underscore-dangle": 2,
        "no-whitespace-before-property": 2,
        "prefer-const": 1,
        "no-var": 2,
        "react/no-deprecated": 1,
        "space-before-function-paren": ["error", {
            "anonymous": "always",
            "named": "never",
            "asyncArrow": "always"
        }],
        "curly": [1, "multi-or-nest", "consistent"],
        "quote-props": [1, "as-needed"],
        "react/jsx-closing-bracket-location": [1, {selfClosing: 'after-props'}],
        "react/jsx-pascal-case": 2,
        "react/jsx-no-comment-textnodes": 1
    },
    "globals": {
        "window": true,
        "document": true
    }
}
